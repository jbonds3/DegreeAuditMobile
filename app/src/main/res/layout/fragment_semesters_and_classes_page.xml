<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.Fragment.SemestersFragement">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/semesterMMTV"
            android:layout_width="233dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="84dp"
            android:gravity="center"
            android:text=""
            android:textSize="36sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/classMMTV"
            android:layout_width="233dp"
            android:layout_height="170dp"
            android:text=""
            app:layout_constraintStart_toStartOf="@+id/semesterMMTV"
            app:layout_constraintTop_toBottomOf="@+id/semesterMMTV" />

        <Button
            android:id="@+id/previousBtnMM"
            android:layout_width="76dp"
            android:layout_height="48dp"
            android:layout_marginTop="28dp"
            android:text="@string/previous"
            app:layout_constraintStart_toStartOf="@+id/classMMTV"
            app:layout_constraintTop_toBottomOf="@+id/classMMTV" />

        <Button
            android:id="@+id/nextBtnMM"
            android:layout_width="76dp"
            android:layout_height="48dp"
            android:text="@string/next"
            app:layout_constraintEnd_toEndOf="@+id/classMMTV"
            app:layout_constraintTop_toTopOf="@+id/previousBtnMM" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>